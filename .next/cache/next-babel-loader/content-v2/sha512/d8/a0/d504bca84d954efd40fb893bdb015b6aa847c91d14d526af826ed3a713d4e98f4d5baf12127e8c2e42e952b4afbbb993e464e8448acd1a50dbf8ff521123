r\n        if (hasNext) {\r\n            setCurrentEpisodeIndex(currentEpisodeIndex + 1);\r\n        }\r\n    }\r\n\r\n    function playPrevious() {\r\n        if (hasPrevious) {\r\n            setCurrentEpisodeIndex(currentEpisodeIndex - 1);\r\n        }\r\n    }\r\n\r\n    return (\r\n        <PlayerContext.Provider\r\n            value={{\r\n                episodeList,\r\n                currentEpisodeIndex,\r\n                isPlaying,\r\n                play,\r\n                playList,\r\n                setPlayingState,\r\n                togglePlay,\r\n                playNext,\r\n                playPrevious,\r\n                hasNext,\r\n                hasPrevious\r\n            }}\r\n        >\r\n            {children}\r\n        </PlayerContext.Provider>\r\n    )\r\n}"]},"metadata":{},"sourceType":"module"}